# Production Environment Configuration for FlipLens

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-here-make-it-very-secure
DEBUG=false

# eBay API Configuration (PRODUCTION KEYS)
EBAY_API_KEY=your-production-ebay-api-key-here
EBAY_APP_ID=your-production-ebay-app-id-here
EBAY_CERT_ID=your-production-ebay-cert-id-here
EBAY_DEV_ID=your-production-ebay-dev-id-here
EBAY_USE_SANDBOX=false

# JWT Configuration
JWT_SECRET_KEY=your-production-jwt-secret-key-here-make-it-very-secure
JWT_ACCESS_TOKEN_EXPIRES=86400

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/fliplens_production
# Or for SQLite: sqlite:///fliplens_production.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=fliplens_production.log

# Security Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Email Configuration (for future features)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Redis Configuration (for caching, optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring and Analytics (optional)
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# SSL Configuration
SSL_DISABLE=false
FORCE_HTTPS=true
